<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >   <!-- Trạng thái khi nút click -->
        <shape>

            <gradient
                android:startColor="#33B649"
                android:endColor="#00C4FF"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#3B1C7A" />

            <corners
                android:radius="10dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>

            <solid
                android:color="#D57826" />            <!-- Thiết lập màu nền cho nút -->

            <stroke
                android:width="1dp"
                android:color="#1E3577" />

            <corners
                android:radius="3dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>