<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95B5D1"
    tools:context=".UserActivity">


    <TextView
        android:layout_below="@+id/toolbar"
        android:id="@+id/tv_username"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:text="Name"
        android:textColor="#1D0849"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/edt_insert_name"
        android:hint="Name"
        android:textColorHint="#1C2871"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="visible"
        android:id="@+id/btn_save"
        android:layout_marginTop="20dp"
        android:text="Save Name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edt_insert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/tv_username"
        android:id="@+id/tv_useemail"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Email"
        android:textColor="#1D0849"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Toolbar
        android:id="@+id/toolbar"
        android:background="#98C667"
        style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        android:title="Home"
        android:titleTextColor="#10423C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</RelativeLayout>