<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_register">


    <ImageView
        android:id="@+id/img_regis"
        android:src="@drawable/Registratio"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="80dp" />

    <EditText
        android:layout_marginTop="30dp"
        android:textColorHint="#FFFF"
        android:textSize="20sp"
        android:id="@+id/edt_email"
        android:layout_below="@+id/img_regis"
        android:hint="Email                  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="10dp"
        android:textColorHint="#FFFF"
        android:textSize="20sp"
        android:id="@+id/edt_pass"
        android:layout_below="@+id/edt_email"
        android:hint="Password           "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/background_btn2"
        android:layout_marginTop="40dp"
        android:text="Sign Up"
        android:id="@+id/btn_signup"
        android:layout_below="@+id/edt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/background_btn2"
        android:layout_marginTop="20dp"
        android:text="Confirm"
        android:id="@+id/btn_trangchu"
        android:layout_below="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/background_btn2"
        android:layout_marginTop="20dp"
        android:text="Back"
        android:id="@+id/btn_back"
        android:layout_below="@+id/btn_trangchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>